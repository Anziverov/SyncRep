@model NugetAnalyzer.BLL.Models.Profile
@{
    ViewData["Title"] = "UserCreationForm";
}

<h1>UserCreationForm</h1>

<form asp-controller="Account" asp-action="CreateUser" method="post" class="d-flex container">
    <input type="text" asp-for="GitHubId" hidden="hidden" />
    <input type="text" asp-for="GitHubUrl" hidden="hidden" />
    <input type="text" asp-for="AvatarUrl" hidden="hidden" />

    <div class="form-group">
        <label>UserName</label>
        <input type="text" asp-for="UserName" class="form-control" />
    </div>

    <div class="form-group">
        <label>FirstName</label>
        <input type="text" asp-for="FirstName" class="form-control"/>
    </div>

    <div class="form-group">
        <label>LastName</label>
        <input type="text" asp-for="LastName" class="form-control"/>
    </div>

    <div class="form-group">
        <label>Email</label>
        <input type="text" asp-for="Email" class="form-control"/>
    </div>

    <input type="submit" value="Sign up for NugetAnalyzer" class="btn btn-success"/>
</form>